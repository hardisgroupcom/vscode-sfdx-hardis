// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
			{
				"label": "watch:dev",
				"type": "shell",
				"command": "yarn run watch",
				"problemMatcher": "$tsc-watch",
				"isBackground": true,
				"background": {
					"activeOnStart": true,
					"beginsPattern": "Compiler is watching files for updates...",
					"endsPattern": "Compiler finished"
				},
				"presentation": {
					"reveal": "never"
				},
				"group": {
					"kind": "build",
					"isDefault": false
				}
			},
		{
			"label": "build:prod",
			"type": "shell",
			"command": "yarn run build",
			"problemMatcher": "$tsc",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
			{
				"label": "build:dev",
				"type": "shell",
				"command": "yarn run dev",
				"problemMatcher": "$tsc",
				"group": {
					"kind": "build",
					"isDefault": false
				}
			},
	]
}
